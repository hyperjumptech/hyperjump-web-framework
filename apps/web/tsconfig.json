{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/api/posts/[postId]/client.gen.ts",
    "app/api/posts/[postId]/route.ts",
    "app/api/posts/[postId]/server.function.gen.ts",
    "app/api/posts/[postId]/use-route-get.gen.tsx",
    "app/api/posts/[postId]/use-route-post.gen.tsx",
    "app/api/posts/[postId]/use-server-function.gen.tsx"
  ],
  "exclude": ["node_modules"]
}
